          {
            "group": "Concepts",
            "pages": [
              "concepts/detection",
              "concepts/caching"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Detection",
            "pages": [
              "api-reference/detect",
              "api-reference/detect-url"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "api-reference/models",
